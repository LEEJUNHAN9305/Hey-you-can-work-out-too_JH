<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/workout_name"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal|center_vertical"
        android:background="@drawable/border_workout_name"
        android:text="운동기구 이름"
        android:textSize="19sp"/>

    <ScrollView
        android:id="@+id/sub_activity_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".SubActivity">

        <LinearLayout
            android:id="@+id/sub_activity_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/workout_view"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

            <LinearLayout
                android:id="@+id/workout_effect"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">
                <TextView
                    android:id="@+id/workout_effect1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:text=""
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/workout_effect2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:text=""
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="15sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:paddingBottom="20dp"
                android:text="운동방법1"
                android:textColor="#000000"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:paddingTop="20dp"
                android:paddingBottom="5dp"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:text="운동방법2"
                android:textColor="#000000"
                android:textSize="17sp"
                android:background="@drawable/border_workout_methods_2"/>

            <Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/border_btn3"
                android:drawableStart="@drawable/resize_youtube_icon"
                android:drawablePadding="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="운동기구 사용법 보러가기"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/routine_intro"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:text="이 운동기구가 포함된 루틴을 추천해드릴게요"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/a_routine"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:text="루틴A"
                android:textSize="17sp"/>

            <HorizontalScrollView
                android:id="@+id/routine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:scrollbars="horizontal"
                tools:context=".SubActivity">

                <LinearLayout
                    android:id="@+id/routine_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="left">
                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/b_routine"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="18sp"/>

            <HorizontalScrollView
                android:id="@+id/routine2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:scrollbars="horizontal"
                tools:context=".SubActivity">

                <LinearLayout
                    android:id="@+id/routine_view2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="left">
                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>